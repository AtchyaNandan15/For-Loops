#include <iostream>

using namespace std;

int main()
{
    
    string name;
    
    cout<<" Enter you name ";
    cin>> name; 
    
    int i;
    
    for (i=1;i<=50;i++)
    
    {
        cout<<" Hello " <<name<< ".\n";
    }

}

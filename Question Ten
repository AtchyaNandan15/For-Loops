#include<iostream>
#include<string>
using namespace std;

main()
{
    //variable declaration
	int num; 
	int i,j;


	//get info from user
	cout<<" Enter a number: ";
	cin>>num;
      

	for (i=1;i<=num;num--) {
        for(j=1;j<=num-1;j++) {
            cout<<"*";
	    }
	    cout<<"*\n";
    }
	
	
}



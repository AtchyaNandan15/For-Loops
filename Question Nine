#include <iostream>

using namespace std;

int main()
{
  int num1;
  int i;
  int a;
  
  
  
  cout<<" Enter a number:  ";
  cin>> num1;
  //cout<<"num1 is " <<num1<<"\n";
  a=(num1)%2;

  if ((a == 0)  && (num1 > 0)) 
    {  
   cout<<" This is a positive even number!\n"; 
    }
  else if ((a ==1) && (num1 > 0)) 
    {
      cout<<" This is a positive odd number!\n";
    }
    
  else if ( (num1 < 0)  && (a == 0) )
    {
           cout<<" This is a negative even number!\n"; 
    }
  else if ( (num1 < 0) && (a == -1) ) 
    {
        cout<<" This is a negative odd number!\n"; 

    }
  else if (num1 == 0) 
    {
        cout<<"Not a valid entry!!! ";
        
    }
 

  for ( i=1; i<=10; i++)
  cout<<" "<<num1<< "\t\n";
  
 
  
 }

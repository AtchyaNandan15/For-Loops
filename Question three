

#include<iostream>
#include<string>
using namespace std;

main()
{
	int f;
	int c;
	
	cout<<"Fahrenheit to celsius\n";
	cout<<"^^^^^^^^^^^^^^^^^^^^^\n";
	cout<<"Temperature in Fahrenheit\t| Temperature in Celsius\n";
	cout<<"-------------------------------------------------------\n";


	for(f=-40;f<101; f+=5)
	{
	
		//c = ( (f âˆ’ 32) * ( 5/9)) ;
		c= ((f-32) * (5) ) / 9;
	
	cout<< "\t" <<f<<"\t                |          "<<c<<"\n";

	}
	


    

}


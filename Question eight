#include <iostream>

using namespace std;

int main()
{
  int x;
  int num1;
  int i;
   
   cout<<" Enter a number between 1 to 10:  ";
   cin>> num1;
  
   for (i=0;i<=1;i++) {
   
    if ( ( num1 == 1)  || (num1 == 2 )|| (num1 ==3) || (num1 ==4) || (num1 ==5 )|| (num1 ==7 ) ||(num1 == 8 ) || (num1 ==9) ||(num1 == 10)) {
      cout<<" try again: ";
      cin>>num1; 
   }

    else if (num1 == 6) {
      cout<<" Congratualation!!! "; 
      break;
    }
  
   }
   
   
   
   
   
   
   
   
   
   
   

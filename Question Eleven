#include<iostream>
#include<string>
using namespace std;

main()
{
    //variable declaration
	int i,j;
    int num=9;
	
	for (i=1;i<=num;i=i+2) {
            cout<<"\n\t";
        for(j=1;j<=i;j++) {
            cout<<"*";
	    }
    }
   
}

